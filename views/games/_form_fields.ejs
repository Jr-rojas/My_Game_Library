<div>
    <label>Title</label>
    <input type='text' name="title" value="<%= game.title %>">
</div>
<div>
    <label>Developer</label>
    <select name="developer">
        <% developers.forEach(developer=> { %>
            <% if (developer.id===game.developer) { %>
                <option selected label="<%= developer.name %>" value="<%= developer.id %>">
            <% } else { %>
                <option label="<%= developer.name %>" value="<%= developer.id %>">
            <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label>Published Date</label>
    <input type='date' name="publishDate" 
            value="<%= game.publishDate == null ? '' : 
            game.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Game Size</label>
    <input type='number' name="size" min="1"
            value="<%= game.size %>">
</div>
<div>
    <label>Cover</label>
    <input type='file' name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name='description'><%= game.desrciption %></textarea>
</div>